{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build and run",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                "${workspaceFolder}/Classes/DataCube.cpp",
                "${workspaceFolder}/Classes/Camera.cpp",
                "${workspaceFolder}/Helper.cpp"
                // "/usr/local/include/CCfits"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build main",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I/usr/local/include/",
                // "-I/usr/local/include/fitsio",
                "-L/usr/local/lib",
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/main.exe",
                "${workspaceFolder}/Classes/DataCube.cpp",
                "${workspaceFolder}/Classes/Camera.cpp",
                "${workspaceFolder}/Helper.cpp",
                // "-lEleFits"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}